<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자판기 프로그램"/>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView

        android:layout_width="109dp"
        android:layout_height="131dp"
        android:src="@drawable/shin" />


    <TextView
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신라면900원"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/txt_shin"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10개 남음"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/btn_shin"
        android:text="주문 하기"
        android:backgroundTint="#FF5722"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView

            android:layout_width="109dp"
            android:layout_height="131dp"
            android:src="@drawable/jin" />


        <TextView
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="진라면800원"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/txt_jin"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10개 남음"
            android:layout_marginLeft="5dp"/>

        <Button
            android:id="@+id/btn_jin"
            android:text="주문 하기"
            android:backgroundTint="#FF5722"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_margin="30dp"

            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView

                    android:layout_width="109dp"
                    android:layout_height="131dp"
                    android:src="@drawable/yeol" />


                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="열라면 700원"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/txt_yeol"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10개 남음"/>

                <Button
                    android:id="@+id/btn_yeol"
                    android:text="주문 하기"
                    android:backgroundTint="#FF5722"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView

                        android:layout_width="109dp"
                        android:layout_height="131dp"
                        android:src="@drawable/hc" />


                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="불닭1,100원"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/txt_hc"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10개 남음"/>

                    <Button

                        android:id="@+id/btn_hc"
                        android:text="주문 하기"
                        android:backgroundTint="#FF5722"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>




</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <EditText
        android:id="@+id/ed_txt"
        android:layout_marginLeft="10dp"
        android:layout_weight="8"
        android:textColor="#918D8D"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="금액을 입력하세요"/>

    <Button
        android:id="@+id/btn_price"
        android:layout_marginRight="10dp"
        android:backgroundTint="#FF5722"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="금액 입력"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_main"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="잔액 : 0원"/>
</LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_result"
        android:backgroundTint="#FF5722"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="잔돈 반환"/>

</LinearLayout>

